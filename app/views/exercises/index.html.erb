<h1>Listing exercises</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Reps</th>
    <th>Weight</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @exercises.each do |exercise| %>
  <tr>
    <td><%= exercise.name %></td>
    <td><%= exercise.reps %></td>
    <td><%= exercise.weight %></td>
    <td><%= link_to 'Show', exercise %></td>
    <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
    <td><%= link_to ('Delete', exercise, :method => :delete, :class => 'action', :confirm => 'Are you sure?'  %></td>
  </tr>
<% end %>
</table>

